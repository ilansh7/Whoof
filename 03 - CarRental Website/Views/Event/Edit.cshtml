@model DoggyStyle.Event

@{
    ViewBag.Title = "Appointment";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <div style="width: 45%; margin-left: auto; margin-right: auto;">
        <fieldset style="width: 100%;">
            <legend>@ViewBag.Title</legend>
            <div style="width: 60%; float: left;">
                <table>
                    <tr>
                        <td>
                            @Html.LabelFor(model => model.Subject)
                        </td>
                        <td>&nbsp;&nbsp;</td>
                        <td>
                            @Html.EditorFor(model => model.Subject, new { @class = "sg-input sg-input-text" })
                            @Html.ValidationMessageFor(model => model.Subject)
                        </td>
                    </tr>
                    <tr>
                        <td>
                            @Html.LabelFor(model => model.Description)
                        </td>
                        <td>&nbsp;&nbsp;</td>
                        <td>
                            @Html.HiddenFor(model => model.Description)
                            @Html.DropDownList("MyEventTypes", (SelectList)ViewBag.MyEventTypes, "Please select", new { @class = "form-control", @id= "MyEventTypes" })
                            @Html.ValidationMessageFor(model => model.Description)
                        </td>
                    </tr>
                    <tr>
                        <td>
                            @Html.LabelFor(model => model.Start)
                        </td>
                        <td>&nbsp;&nbsp;</td>
                        <td>
                            @Html.EditorFor(model => model.Start)
                            @Html.ValidationMessageFor(model => model.Start)
                        </td>
                    </tr>
                    <tr>
                        <td>
                            @Html.LabelFor(model => model.DurationInMin)
                        </td>
                        <td>&nbsp;&nbsp;</td>
                        <td>
                            @Html.EditorFor(model => model.DurationInMin)
                            @Html.ValidationMessageFor(model => model.DurationInMin)
                        </td>
                    </tr>
                    <tr>
                        <td>
                            @Html.LabelFor(model => model.IsFullDay)
                        </td>
                        <td>&nbsp;&nbsp;</td>
                        <td class="editor-field">
                            @Html.EditorFor(model => model.IsFullDay)
                            @Html.ValidationMessageFor(model => model.IsFullDay)
                        </td>
                    </tr>
                    <tr>
                        <td>&nbsp;&nbsp;</td>
                    </tr>
                    <tr>
                        <td>
                            <input type="submit" class="btn btn-primary btn-lg specs-link" value="Update" />
                            @Html.HiddenFor(model => model.EventID)
                            @*<input type="text" id="myFrame" data-myValue="@ViewBag.MyTimeFrame" />*@
                        </td>
                        <td>&nbsp;&nbsp;</td>
                        @if (ViewBag.ErrorMessage != "")
                        {
                            <td class="error">@ViewBag.ErrorMessage</td>
                        }
                        else
                        {
                            <td>@Html.ActionLink("Back to events List", "Index", "Event")</td>
                        }
                    </tr>
                </table>
            </div>
        </fieldset>
    </div>
}

<style>
    body {
        margin-left: auto;
        margin-right: auto;
    }

    tr {
        height: 3em;
    }

    .sg-input-text {
        padding: .2em .3em;
        border-radius: .3em;
    }

    .error {
        font-weight: bold;
        color: red;
    }
</style>

