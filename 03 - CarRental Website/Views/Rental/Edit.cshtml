@model DoggyStyle.Rental

@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Rental</legend>

        @Html.HiddenFor(model => model.RentalId)

        <div class="editor-label">
            @Html.LabelFor(model => model.FleetId, "Fleet")
        </div>
        <div class="editor-field">
            @Html.DropDownList("FleetId", String.Empty)
            @Html.ValidationMessageFor(model => model.FleetId)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.UserId)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.UserId)
            @Html.ValidationMessageFor(model => model.UserId)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.StartRentalDate)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.StartRentalDate)
            @Html.ValidationMessageFor(model => model.StartRentalDate)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.EndRentalDate)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.EndRentalDate)
            @Html.ValidationMessageFor(model => model.EndRentalDate)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.ActualEndRental)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.ActualEndRental)
            @Html.ValidationMessageFor(model => model.ActualEndRental)
        </div>

        <p>
            <input type="submit" value="Save" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
